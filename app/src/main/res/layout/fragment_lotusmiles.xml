<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".LoginActivty">
    <ImageView
        android:id="@+id/imageViewItemHome"
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:background="@drawable/hoasen"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="130dp"
        android:gravity="center"
        android:text="LOTUSMILES"
        android:textColor="#F6F3F3"
        android:textSize="30sp" />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="180dp"
        android:gravity="center"
        android:text="Đăng nhập để trải nghiệm các tiện ích trực tuyến dành cho hội viên Bông Sen Vàng"
        android:textColor="#F6F3F3"
        android:textSize="20sp" />
    <LinearLayout
        android:layout_width="341dp"
        android:layout_height="170dp"
        android:orientation="vertical"
        android:layout_marginLeft="35dp"
        android:layout_marginTop="230dp"
        android:background="@drawable/hinhtrang">
        <EditText
            android:id="@+id/edtUser"
            android:layout_width="340dp"
            android:layout_height="50dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="5dp"
            android:drawablePadding="12dp"
            android:hint="Tên đăng nhập"
            android:inputType="textPersonName"
            android:padding="12dp"
            android:textAllCaps="false"
            android:textColorHint="@android:color/background_dark" />

        <EditText
            android:id="@+id/edtPassWord"
            android:layout_width="341dp"
            android:layout_height="50dp"
            android:layout_below="@+id/edtUser"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="8dp"
            android:drawablePadding="12dp"
            android:hint="Mật khẩu"
            android:inputType="textPassword"
            android:padding="12dp"
            android:textAllCaps="false"
            android:textColorHint="@android:color/background_dark" />
        <RadioGroup
            android:id="@+id/radioGroup"
            android:layout_width="341dp"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="18dp">
            <RadioButton
                android:id="@+id/radiobutton1"
                android:layout_width="341dp"
                android:layout_height="25dp"
                android:layout_weight="1"
                android:buttonTint="@android:color/background_dark"
                android:checked="true"
                android:text="Lưu mật khẩu"
                android:textColorHint="@android:color/background_dark"
                android:textSize="15sp" />
        </RadioGroup>
    </LinearLayout>

    <Button
        android:id="@+id/btnLogin"
        android:layout_width="341dp"
        android:layout_height="50dp"
        android:layout_marginLeft="35dp"
        android:layout_marginTop="410dp"
        android:background="@drawable/duongvien_goctron_fullvang"
        android:padding="12dp"
        android:text="Đăng nhập"
        android:textColor="@android:color/background_light"
        android:textSize="18sp" />

    <Button
        android:id="@+id/btnRegiser"
        android:layout_width="341dp"
        android:layout_height="50dp"
        android:layout_below="@+id/btnLogin"
        android:layout_marginLeft="35dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/duongvien_goctron_vang"
        android:padding="12dp"
        android:text="Đăng kí hội viên Bông Sen Vàng"
        android:textColor="@android:color/holo_orange_light"
        android:textSize="14sp" />
</RelativeLayout>