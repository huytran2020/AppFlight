<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="414dp"
    android:layout_height="match_parent"
    android:background="@drawable/bautroi2"
    android:orientation="vertical"
    android:padding="0dp">

    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="405dp"
        android:layout_height="200dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textViewMoTaNgayDi"
            android:layout_width="260dp"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="0dp"
            android:drawablePadding="4dp"
            android:text="Chi tiết chuyến bay"
            android:textColor="#FFC107"
            android:textSize="30sp" />

        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="wrap_content"
            android:layout_height="25dp"
            android:layout_marginTop="20dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="80dp"
                android:layout_height="20dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="0dp"
                android:text="Cất cánh:"
                android:textColor="#000000"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/MoTaNgayDi"
                android:layout_width="80dp"
                android:layout_height="20dp"
                android:layout_marginLeft="10dp"
                android:textColor="#070707"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/MoTaGioBay"
                android:layout_width="80dp"
                android:layout_height="20dp"
                android:layout_marginLeft="10dp"
                android:textColor="#070707"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/MoTaNoiDi"
                android:layout_width="80dp"
                android:layout_height="20dp"
                android:layout_marginLeft="10dp"
                android:textColor="#070707"
                android:textSize="16sp" />
        </androidx.appcompat.widget.LinearLayoutCompat>

        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="wrap_content"
            android:layout_height="25dp"
            android:layout_marginLeft="0dp"
            android:layout_marginTop="5dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/machuyenbay1"
                android:layout_width="120dp"
                android:layout_height="20dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="0dp"
                android:text="Mã chuyến bay:"
                android:textColor="#000000"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/MoTaMaChuyenBay"
                android:layout_width="180dp"
                android:layout_height="20dp"
                android:layout_marginLeft="10dp"
                android:textColor="#070707"
                android:textSize="16sp" />
        </androidx.appcompat.widget.LinearLayoutCompat>

        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="wrap_content"
            android:layout_height="25dp"
            android:layout_marginLeft="0dp"
            android:layout_marginTop="5dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="120dp"
                android:layout_height="20dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="0dp"
                android:text="Thời gian bay:"
                android:textColor="#000000"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/MoTaThoiGianBay"
                android:layout_width="250dp"
                android:layout_height="20dp"
                android:layout_marginLeft="10dp"
                android:textColor="#070707"
                android:textSize="16sp" />
        </androidx.appcompat.widget.LinearLayoutCompat>

        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="wrap_content"
            android:layout_height="25dp"
            android:layout_marginLeft="0dp"
            android:layout_marginTop="5dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/hacanh"
                android:layout_width="70dp"
                android:layout_height="20dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="0dp"
                android:text="Hạ cánh:"
                android:textColor="#000000"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/MoTaNgayDen"
                android:layout_width="90dp"
                android:layout_height="20dp"
                android:layout_marginLeft="10dp"
                android:textColor="#070707"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/MoTaGioDen"
                android:layout_width="80dp"
                android:layout_height="20dp"
                android:layout_marginLeft="10dp"
                android:textColor="#070707"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/MoTaNoiDem"
                android:layout_width="80dp"
                android:layout_height="20dp"
                android:layout_marginLeft="10dp"
                android:textColor="#070707"
                android:textSize="16sp" />
        </androidx.appcompat.widget.LinearLayoutCompat>

    </androidx.appcompat.widget.LinearLayoutCompat>

    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="405dp"
        android:layout_height="170dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/chitietgia"
            android:layout_width="160dp"
            android:layout_height="40dp"
            android:layout_centerHorizontal="true"
            android:layout_gravity="center"
            android:layout_marginLeft="0dp"
            android:drawablePadding="4dp"
            android:text="Chi tiết giá"
            android:textColor="#FFC107"
            android:textSize="30sp" />



        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:layout_marginLeft="0dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/giatien"
                android:layout_width="100dp"
                android:layout_height="35dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="5dp"
                android:text="Giá vé:"
                android:textColor="#000000"
                android:textSize="30sp" />

            <TextView
                android:id="@+id/MoTaGiaVe"
                android:layout_width="250dp"
                android:layout_height="35dp"
                android:layout_marginLeft="2dp"
                android:layout_marginTop="5dp"
                android:textColor="#FF9800"
                android:textSize="30sp" />
        </androidx.appcompat.widget.LinearLayoutCompat>
    </androidx.appcompat.widget.LinearLayoutCompat>
    <Button
        android:id="@+id/btntieptheo"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:layout_gravity="center"
        android:layout_marginLeft="0dp"
        android:layout_marginTop="50dp"
        android:background="@drawable/duongvien_goctron"
        android:padding="0dp"
        android:text="Tiếp tục"
        android:textColor="#FFEB3B"
        android:textSize="30sp" />
    <Button
        android:id="@+id/btnBack"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:layout_gravity="center"
        android:layout_marginLeft="0dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/duongvien_goctron"
        android:padding="0dp"
        android:text="Trở về"
        android:textColor="#FFEB3B"
        android:textSize="30sp" />
</androidx.appcompat.widget.LinearLayoutCompat>

