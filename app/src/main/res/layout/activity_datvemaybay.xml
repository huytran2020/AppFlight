<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:foregroundTint="#070707"
    android:foregroundTintMode="screen"
    android:orientation="vertical"
    android:background="@drawable/bautroi2"
    android:padding="3dp">

    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="400dp"
        android:layout_height="150dp"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        android:background="#FBFAFA"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:text="Thông tin chuyến bay"
            android:textColor="#FFC107"
            android:textSize="20sp" />

        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="400dp"
            android:layout_height="25dp"
            android:layout_gravity="center"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textViewMoTaNoiDi"
                android:layout_width="40dp"
                android:layout_height="20dp"
                android:layout_marginLeft="5dp"
                android:textColor="#000000"
                android:textSize="16dp" />

            <ImageView
                android:id="@+id/imageViewItemHome"
                android:layout_width="30dp"
                android:layout_height="20dp"
                android:layout_marginLeft="5dp"
                android:background="@drawable/maybayngang" />

            <TextView
                android:id="@+id/textViewMoTaNoiDen"
                android:layout_width="70dp"
                android:layout_height="20dp"
                android:layout_marginLeft="5dp"
                android:textColor="#000000"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/textViewMoTaNgayDi"
                android:layout_width="100dp"
                android:layout_height="20dp"
                android:layout_marginLeft="145dp"
                android:textColor="#000000"
                android:textSize="16sp" />
        </androidx.appcompat.widget.LinearLayoutCompat>

        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="400dp"
            android:layout_height="25dp"
            android:layout_gravity="center"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textViewMoTaThoiGianBay"
                android:layout_width="200dp"
                android:layout_height="20dp"
                android:textColor="#000000"
                android:textSize="16dp" />

            <TextView
                android:id="@+id/textViewMoTaGioDi"
                android:layout_width="40dp"
                android:layout_height="20dp"
                android:layout_marginLeft="90dp"
                android:textColor="#000000"
                android:textSize="16dp" />

            <TextView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_marginLeft="5dp"
                android:text="----"
                android:textColor="#000000"
                android:textSize="16dp" />

            <TextView
                android:id="@+id/textViewMoTaGioDen"
                android:layout_width="40dp"
                android:layout_height="20dp"
                android:layout_marginLeft="5dp"
                android:textColor="#000000"
                android:textSize="16sp" />
        </androidx.appcompat.widget.LinearLayoutCompat>

        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="400dp"
            android:layout_height="25dp"
            android:layout_gravity="center"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textViewMoTaMaMayBay"
                android:layout_width="100dp"
                android:layout_height="20dp"
                android:textColor="#000000"
                android:textSize="16dp" />

            <TextView
                android:id="@+id/textViewMoTaNgayDen"
                android:layout_width="100dp"
                android:layout_height="20dp"
                android:layout_marginLeft="200dp"
                android:textColor="#000000"
                android:textSize="16sp" />
        </androidx.appcompat.widget.LinearLayoutCompat>

        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="400dp"
            android:layout_height="30dp"
            android:layout_gravity="center"
            android:layout_marginTop="5dp"
            android:background="#E8E6E6"
            android:orientation="horizontal">

            <TextView
                android:layout_width="130dp"
                android:layout_height="25dp"
                android:text="Tổng giá vé"
                android:textColor="#000000"
                android:textSize="20dp" />

            <TextView
                android:id="@+id/textViewMoTaTongGiaVe"
                android:layout_width="match_parent"
                android:layout_height="25dp"
                android:textColor="#000000"
                android:textSize="20sp" />
        </androidx.appcompat.widget.LinearLayoutCompat>
    </androidx.appcompat.widget.LinearLayoutCompat>

    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="400dp"
        android:layout_height="320dp"
        android:layout_gravity="center"
        android:layout_marginTop="5dp"
        android:orientation="vertical">

        <TextView
            android:layout_width="200dp"
            android:layout_height="25dp"
            android:layout_gravity="center"
            android:text="Thông tin liên hệ"
            android:textColor="#FFC107"
            android:textSize="20dp" />

        <EditText
            android:id="@+id/edtHoVaTen"
            android:layout_width="340dp"
            android:layout_height="50dp"
            android:layout_centerHorizontal="true"
            android:layout_gravity="center"
            android:layout_marginTop="5dp"
            android:drawablePadding="12dp"
            android:hint="Họ và tên"
            android:inputType="textPersonName"
            android:padding="12dp"
            android:textAllCaps="false"
            android:textColor="#0C0C0C"
            android:textColorHint="@android:color/background_dark" />

        <EditText
            android:id="@+id/edtSdt"
            android:layout_width="340dp"
            android:layout_height="50dp"
            android:layout_centerHorizontal="true"
            android:layout_gravity="center"
            android:layout_marginTop="5dp"
            android:drawablePadding="12dp"
            android:hint="Số điện thoại"
            android:inputType="textPersonName"
            android:padding="12dp"
            android:textAllCaps="false"
            android:textColorHint="@android:color/background_dark" />

        <EditText
            android:id="@+id/edtEmail"
            android:layout_width="340dp"
            android:layout_height="50dp"
            android:layout_centerHorizontal="true"
            android:layout_gravity="center"
            android:layout_marginTop="5dp"
            android:drawablePadding="12dp"
            android:hint="Email"
            android:inputType="textPersonName"
            android:padding="12dp"
            android:textAllCaps="false"
            android:textColorHint="@android:color/background_dark" />

        <EditText
            android:id="@+id/edtDiaChi"
            android:layout_width="340dp"
            android:layout_height="50dp"
            android:layout_centerHorizontal="true"
            android:layout_gravity="center"
            android:layout_marginTop="5dp"
            android:drawablePadding="12dp"
            android:hint="Địa chỉ"
            android:inputType="textPersonName"
            android:padding="12dp"
            android:textAllCaps="false"
            android:textColorHint="@android:color/background_dark" />

        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="400dp"
            android:layout_height="30dp"
            android:layout_gravity="center"
            android:layout_marginTop="5dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="200dp"
                android:layout_height="30dp"
                android:text="Tổng cộng thành tiền"
                android:textColor="#000000"
                android:textSize="20dp" />

            <TextView
                android:id="@+id/textViewMoTaTongThanhTien"
                android:layout_width="200dp"
                android:layout_height="25dp"
                android:textColor="#FF5722"
                android:textSize="20sp" />
        </androidx.appcompat.widget.LinearLayoutCompat>

        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="400dp"
            android:layout_height="30dp"
            android:layout_gravity="center"
            android:layout_marginTop="15dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="280dp"
                android:layout_height="25dp"
                android:text="Tổng cộng thành tiền sau khi khuyến mãi"
                android:textColor="#000000"
                android:textSize="15dp" />

            <TextView
                android:id="@+id/textViewMoTaTongThanhTienKM"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:text="###VNĐ"
                android:textColor="#FF5722"

                android:textSize="20sp" />
        </androidx.appcompat.widget.LinearLayoutCompat>
    </androidx.appcompat.widget.LinearLayoutCompat>
    <Button
        android:id="@+id/btnChon"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginTop="5dp"
        android:background="@drawable/duongvien_goctron_fullvang"
        android:layout_marginLeft="5dp"
        android:text="Đặt chỗ"
        android:textColor="#FFFFFF"
        android:textSize="20sp" />
    <Button
        android:id="@+id/btnBack"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/duongvien_goctron_fullvang"
        android:layout_marginLeft="5dp"
        android:text="Trở về"
        android:textColor="#FFFFFF"
        android:textSize="20sp" />
</androidx.appcompat.widget.LinearLayoutCompat>

