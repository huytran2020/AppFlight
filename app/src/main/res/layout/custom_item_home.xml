<?xml version="1.0" encoding="utf-8"?>
    <androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="390dp"
        android:layout_height="140dp"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        android:foregroundTint="#070707"
        android:foregroundTintMode="screen"
        android:orientation="vertical"
        android:padding="3dp">

        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="380dp"
            android:layout_height="100dp"
            android:layout_marginLeft="5dp"
            android:orientation="horizontal">

            <androidx.appcompat.widget.LinearLayoutCompat
                android:layout_width="110dp"
                android:layout_height="80dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/textViewMoTaNgayDi"
                    android:layout_width="90dp"
                    android:layout_height="20dp"
                    android:layout_marginLeft="20dp"
                    android:textColor="#515050"
                    android:textSize="15sp" />

                <TextView
                    android:id="@+id/textViewMoTaGioDi"
                    android:layout_width="90dp"
                    android:layout_height="20dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="3dp"
                    android:textColor="#000000"
                    android:textSize="18dp" />

                <TextView
                    android:id="@+id/textViewMoTaDiemDi"
                    android:layout_width="90dp"
                    android:layout_height="25dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginLeft="20dp"
                    android:textColor="#000000"
                    android:textSize="20sp" />
            </androidx.appcompat.widget.LinearLayoutCompat>

            <androidx.appcompat.widget.LinearLayoutCompat
                android:layout_width="140dp"
                android:layout_height="95dp"
                android:layout_marginLeft="10dp"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/textViewMoTaGioBay"
                    android:layout_width="120dp"
                    android:layout_height="25dp"
                    android:layout_marginLeft="20dp"
                    android:textColor="#515050"
                    android:textSize="16sp" />
                <ImageView
                    android:id="@+id/imageViewItemHome"
                    android:layout_width="140dp"
                    android:background="@drawable/duongbay"
                    android:layout_height="20dp" />
                <TextView
                    android:id="@+id/textViewMoTaLoaiBay"
                    android:layout_width="105dp"
                    android:layout_height="25dp"
                    android:layout_marginLeft="35dp"
                    android:textColor="#000000"
                    android:textSize="16sp" />
                <TextView
                    android:id="@+id/textViewMoTaTenChuyenBay"
                    android:layout_width="140dp"
                    android:layout_height="25dp"
                    android:layout_marginLeft="0dp"
                    android:textColor="#000000"
                    android:textSize="15sp" />
            </androidx.appcompat.widget.LinearLayoutCompat>

            <androidx.appcompat.widget.LinearLayoutCompat
                android:layout_width="110dp"
                android:layout_height="80dp"
                android:layout_marginLeft="10dp"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/textViewMoTaNgayDen"
                    android:layout_width="80dp"
                    android:layout_height="20dp"
                    android:layout_marginLeft="25dp"
                    android:textColor="#515050"
                    android:textSize="15sp" />
                <TextView
                    android:id="@+id/textViewMoTaGioDen"
                    android:layout_width="45dp"
                    android:layout_height="20dp"
                    android:layout_marginLeft="65dp"
                    android:layout_marginTop="3dp"
                    android:textColor="#000000"
                    android:textSize="18sp" />
                <TextView
                    android:id="@+id/textViewMoTaDiemDen"
                    android:layout_width="50dp"
                    android:layout_height="25dp"
                    android:layout_marginLeft="60dp"
                    android:layout_marginTop="5dp"
                    android:textColor="#000000"
                    android:textSize="20sp" />
                <TextView
                    android:id="@+id/tvDateView"
                    android:layout_width="50dp"
                    android:layout_height="10dp"
                    android:layout_gravity="right"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="10dp"
                    android:text=""
                    android:textColor="@android:color/holo_red_light"
                    android:textSize="12sp" />
            </androidx.appcompat.widget.LinearLayoutCompat>
        </androidx.appcompat.widget.LinearLayoutCompat>

        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_marginLeft="0dp"
            android:background="#EAE7E7"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textViewMoTaChiTietChuyenBay"
                android:layout_width="180dp"
                android:layout_height="20dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="0dp"
                android:layout_marginBottom="10dp"
                android:textColor="#000000"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/textViewMoTaGiaTien"
                android:layout_width="180dp"
                android:layout_height="28dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="20dp"
                android:layout_marginBottom="10dp"
                android:textColor="#FF9800"
                android:textSize="20sp" />
        </androidx.appcompat.widget.LinearLayoutCompat>
    </androidx.appcompat.widget.LinearLayoutCompat>


